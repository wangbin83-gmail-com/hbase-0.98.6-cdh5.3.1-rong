<?xml version="1.0" encoding="UTF-8" ?>
<project name="maven-antrun-" default="main"  >
<target name="main">
  <property location="/work/workspace/hbase-0.98.6-cdh5.3.1/hbase-server/target/hbase-webapps" name="build.webapps"/>
  <property location="/work/workspace/hbase-0.98.6-cdh5.3.1/hbase-server/src/main/resources/hbase-webapps" name="src.webapps"/>
  <property location="/work/workspace/hbase-0.98.6-cdh5.3.1/hbase-server/target/generated-sources" name="generated.sources"/>
  <mkdir dir="${build.webapps}"/>
  <copy todir="${build.webapps}">
    <fileset dir="${src.webapps}">
      <exclude name="**/*.jsp"/>
      <exclude name="**/.*"/>
      <exclude name="**/*~"/>
    </fileset>
  </copy>
  <taskdef classname="org.apache.jasper.JspC" name="jspcompiler" classpathref="maven.compile.classpath"/>
  <mkdir dir="${build.webapps}/master/WEB-INF"/>
  <jspcompiler uriroot="${src.webapps}/master" package="org.apache.hadoop.hbase.generated.master" webxml="${build.webapps}/master/WEB-INF/web.xml" outputdir="${generated.sources}/java"/>
  <mkdir dir="${build.webapps}/regionserver/WEB-INF"/>
  <jspcompiler uriroot="${src.webapps}/regionserver" package="org.apache.hadoop.hbase.generated.regionserver" webxml="${build.webapps}/regionserver/WEB-INF/web.xml" outputdir="${generated.sources}/java"/>
  <mkdir dir="${build.webapps}/rest/WEB-INF"/>
  <jspcompiler uriroot="${src.webapps}/rest" package="org.apache.hadoop.hbase.generated.rest" webxml="${build.webapps}/rest/WEB-INF/web.xml" outputdir="${generated.sources}/java"/>
</target>
</project>